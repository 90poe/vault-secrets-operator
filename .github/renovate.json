{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Europe/London",
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "github-actions"
  ],
  "github-actions": {
    "fileMatch": [
      "^(\\.github\\/workflows)\\/[^/]+\\.ya?ml$"
    ],
    "groupName": "actions"
  }
}